{
  "id": "plugin.com.pot-app.llm",
  "plugin_type": "translate",
  "icon": "icon.svg",
  "display": "LLM_Translate",
  "homepage": "https://github.com/GreyHuu/pot-app-translate-plugin-llm",
  "needs": [
    {
      "key": "requestPath",
      "display": "请求地址",
      "type": "input",
      "default": "https://api.openai.com"
    },
    {
      "key": "apiKey",
      "display": "API密钥",
      "type": "input"
    },
    {
      "key": "model",
      "display": "模型选择",
      "type": "select",
      "options": {
        "gpt-4o": "gpt-4o",
        "claude-3-5-sonnet": "claude-3-5-sonnet-2024102",
        "claude-3-7-sonnet": "claude-3-7-sonnet-20250219",
        "deepseek-v3": "deepseek-v3",
        "gemini-2.0-flash": "gemini-2.0-flash"
      },
      "default": "gpt-4o"
    },
    {
      "key": "extra_model",
      "display": "额外模型(若此不为空,则以次为准)",
      "type": "input"
    },
    {
      "key": "system_prompt",
      "display": "系统提示词",
      "type": "input",
      "default": "你是一个翻译助手，请将我给你的内容翻译成中文。"
    },
    {
      "key": "temperature",
      "display": "温度",
      "type": "input",
      "default": "0.6"
    },
    {
      "key": "stream",
      "display": "流式输出",
      "type": "select",
      "options": {
        "true": "是",
        "false": "否"
      },
      "default": "true"
    }
  ],
  "language": {
    "auto": "auto",
    "zh_cn": "zh",
    "zh_tw": "zh_HANT",
    "en": "en",
    "ja": "ja",
    "ko": "ko",
    "fr": "fr",
    "es": "es",
    "ru": "ru",
    "de": "de",
    "it": "it",
    "tr": "tr",
    "pt_pt": "pt",
    "pt_br": "pt",
    "vi": "vi",
    "id": "id",
    "th": "th",
    "ms": "ms",
    "ar": "ar",
    "hi": "hi",
    "mn_cy": "mn",
    "mn_mo": "mn",
    "km": "km",
    "nb_no": "no",
    "nn_no": "no",
    "fa": "fa"
  }
}